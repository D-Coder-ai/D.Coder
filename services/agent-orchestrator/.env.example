# Service Configuration
PORT=8083
SERVICE_NAME=agent-orchestrator
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# NATS Configuration
NATS_URL=nats://localhost:4222

# Kong & Platform API
KONG_BASE_URL=http://localhost:8000
PLATFORM_API_BASE=http://localhost:8000/platform/v1

# LiteLLM Proxy
LITELLM_BASE=http://localhost:4000

# Redis (for caching)
REDIS_URL=redis://localhost:6379/1

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=9091
ENABLE_METRICS=true
ENABLE_TRACING=true

# Authentication (optional in R1)
JWT_SECRET_KEY=replace-with-your-secret
LOGTO_ENDPOINT=http://localhost:3001

# Feature Flags
FLAGSMITH_URL=http://localhost:8090
FLAGSMITH_ENVIRONMENT_KEY=your-environment-key-here

# Security
ENCRYPTION_KEY=replace-with-32-char-secret-key
