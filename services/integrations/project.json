{
  "name": "integrations",
  "sourceRoot": "services/integrations/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose up integrations",
        "cwd": "{workspaceRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry build",
        "cwd": "services/integrations"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry run pytest",
        "cwd": "services/integrations"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry run ruff check .",
        "cwd": "services/integrations"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t dcoder/integrations:latest .",
        "cwd": "services/integrations"
      }
    }
  },
  "tags": ["type:service", "lang:python", "team:integrations"]
}

