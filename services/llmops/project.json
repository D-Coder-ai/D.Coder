{
  "name": "llmops",
  "sourceRoot": "services/llmops/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose up llmops",
        "cwd": "{workspaceRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry build",
        "cwd": "services/llmops"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry run pytest",
        "cwd": "services/llmops"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry run ruff check .",
        "cwd": "services/llmops"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t dcoder/llmops:latest .",
        "cwd": "services/llmops"
      }
    }
  },
  "tags": ["type:service", "lang:python", "team:llmops"]
}

